---
import Layout from "../layouts/Layout.astro";
import NavigationBar from "../components/NavigationBar.astro";
---
<Layout>
  <NavigationBar />
  <main class="contact-main">
    <h1 class="contact-title flicker">CONTACT ME</h1>
    <div class="contact-content">
      <div class="contact-info">
        <a href="mailto:kamlesh@example.com" class="retro-link">kamlesh@example.com</a>
        <div class="contact-socials">
          <a href="https://github.com/yourusername" target="_blank" rel="noopener" class="retro-btn social-btn">GitHub</a>
          <a href="https://linkedin.com/in/yourusername" target="_blank" rel="noopener" class="retro-btn social-btn">LinkedIn</a>
        </div>
      </div>
      <form class="contact-form" autocomplete="off">
        <label>
          Name
          <input type="text" name="name" required />
        </label>
        <label>
          Email
          <input type="email" name="email" required />
        </label>
        <label>
          Message
          <textarea name="message" rows="4" required></textarea>
        </label>
        <button type="submit" class="retro-btn send-btn"><span class="blink">SEND MESSAGE</span></button>
      </form>
    </div>
  </main>
</Layout>
<style>
.contact-main {
  padding: 6rem 1rem 2rem 1rem;
  min-height: 100vh;
  background: #181818;
  color: #39ff14;
  font-family: 'Press Start 2P', 'VT323', monospace, sans-serif;
}
.contact-title {
  text-align: center;
  font-size: 2rem;
  letter-spacing: 2px;
  margin-bottom: 2rem;
  text-shadow: 0 0 8px #39ff14;
}
.contact-content {
  display: flex;
  gap: 2rem;
  max-width: 900px;
  margin: 0 auto;
  flex-wrap: wrap;
  justify-content: center;
}
.contact-info {
  flex: 1 1 220px;
  background: #222;
  border: 2px solid #39ff14;
  border-radius: 8px;
  padding: 1.5rem 1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 0 12px #39ff14, 0 0 2px #39ff14 inset;
  margin-bottom: 2rem;
}
.retro-link {
  color: #39ff14;
  font-size: 1rem;
  text-decoration: underline;
  margin-bottom: 1.2rem;
  font-family: 'VT323', 'Press Start 2P', monospace, sans-serif;
  text-shadow: 0 0 4px #39ff14;
}
.contact-socials {
  display: flex;
  gap: 1rem;
  margin-top: 0.5rem;
}
.social-btn {
  min-width: 100px;
}
.contact-form {
  flex: 2 1 320px;
  background: #111;
  border-radius: 8px;
  padding: 1.5rem;
  box-shadow: 0 0 8px #39ff14 inset;
  display: flex;
  flex-direction: column;
  gap: 1.2rem;
}
.contact-form label {
  color: #39ff14;
  font-size: 0.95rem;
  margin-bottom: 0.2rem;
  font-family: 'VT323', 'Press Start 2P', monospace, sans-serif;
}
.contact-form input,
.contact-form textarea {
  width: 100%;
  background: #181818;
  color: #39ff14;
  border: 2px solid #39ff14;
  border-radius: 4px;
  font-family: 'VT323', 'Press Start 2P', monospace, sans-serif;
  font-size: 1rem;
  padding: 0.5rem;
  margin-top: 0.3rem;
  margin-bottom: 0.7rem;
  box-shadow: 0 0 4px #39ff14 inset;
  outline: none;
  resize: none;
  transition: border 0.2s, box-shadow 0.2s;
}
.contact-form input:focus,
.contact-form textarea:focus {
  border: 2px solid #fff;
  box-shadow: 0 0 8px #39ff14;
}
.send-btn {
  align-self: flex-end;
  margin-top: 0.5rem;
  font-size: 1rem;
  font-family: 'Press Start 2P', 'VT323', monospace, sans-serif;
  background: #181818;
  color: #39ff14;
  border: 2px solid #39ff14;
  border-radius: 4px;
  padding: 0.5rem 2rem;
  text-shadow: 0 0 4px #39ff14;
  box-shadow: 0 0 8px #39ff14 inset;
  cursor: pointer;
  transition: background 0.2s, color 0.2s, box-shadow 0.2s;
}
.send-btn:hover .blink {
  animation: blink 1s steps(1) infinite;
}
@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}
@media (max-width: 700px) {
  .contact-content {
    flex-direction: column;
    gap: 1rem;
  }
  .contact-info, .contact-form {
    width: 100%;
    margin-bottom: 1.5rem;
  }
  .send-btn {
    width: 100%;
    align-self: stretch;
  }
}
</style>
